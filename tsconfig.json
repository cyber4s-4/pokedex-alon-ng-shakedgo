{
	"compilerOptions": {
		"target": "es2020",
		"module": "CommonJS",
		"moduleResolution": "node",
		"lib": ["es2020", "DOM"],
		"baseUrl": "./",
		"outDir": "./dist",
		"noUnusedLocals": true,
		"sourceMap": true,
		"noUnusedParameters": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"tsBuildInfoFile": "./dist/cache/tsc.json",
		"strict": true,
		"esModuleInterop": true
	},
	"include": ["./src/client", "./src/server", "./src/common"]
}
